---
import { loadSiteData, resolveSiteId } from '../lib/site-content';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "namche.ai â€” Jodok Batlogg's AI hub" } = Astro.props;
const site = loadSiteData(resolveSiteId());
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />
  </head>
  <body>
    <div class="bg-grid fixed inset-0 pointer-events-none opacity-40 [mask-image:radial-gradient(ellipse_70%_60%_at_50%_35%,black_25%,transparent_80%)]"></div>

    <header class="relative z-10 px-5 py-6 md:px-8">
      <div class="mx-auto flex max-w-5xl items-center justify-between">
        <a href="/" class="inline-flex items-center gap-3 text-ink no-underline">
          <svg viewBox="0 0 280 280" width="28" height="28" fill="currentColor" class="text-brand">
            <rect x="10" y="10" width="80" height="80"/>
            <rect x="10" y="100" width="80" height="80"/>
            <rect x="10" y="190" width="80" height="80"/>
            <path d="M100,10 h80 v80 h-80 A80,80 0 0,1 100,10Z"/>
            <path d="M100,100 h80 v80 Q100,180 100,100Z"/>
            <rect x="190" y="100" width="80" height="80"/>
            <rect x="190" y="190" width="80" height="80"/>
          </svg>
          <span class="text-sm font-medium tracking-wide">{site.title}</span>
        </a>
      </div>
    </header>

    <main class="relative z-10 mx-auto max-w-5xl px-5 pb-24 md:px-8">
      <slot />
    </main>
  </body>
</html>

<style>
  @import '../styles/global.css';
</style>
