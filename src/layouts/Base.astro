---
interface Props {
  title: string;
  description?: string;
  brandLabel?: string;
  siteId?: string;
}

const { title, description = "namche.ai ‚Äî Jodok Batlogg's AI hub", brandLabel = 'namche.ai', siteId = 'namche' } = Astro.props;
const faviconHrefBySite = {
  namche: '/favicons/namche.svg',
  tashi: '/favicons/tashi.svg',
  pema: '/favicons/pema.svg',
  nima: '/favicons/nima.svg',
} as const;
const faviconHref = faviconHrefBySite[siteId as keyof typeof faviconHrefBySite] ?? '/favicons/namche.svg';
const navHrefBySite = import.meta.env.PROD
  ? {
      namche: 'https://namche.ai',
      tashi: 'https://tashi.namche.ai',
      pema: 'https://pema.namche.ai',
      nima: 'https://nima.namche.ai',
    }
  : {
      namche: '/agents/namche',
      tashi: '/agents/tashi',
      pema: '/agents/pema',
      nima: '/agents/nima',
    };
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href={faviconHref} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Space+Mono:wght@400;700&display=swap" rel="stylesheet" />
    <script defer src="https://cloud.umami.is/script.js" data-website-id="74ae3313-3241-4ac7-8ea7-6110a7054893"></script>
  </head>
  <body data-site={siteId}>
    <div class="site">
      <div class="page-forms" aria-hidden="true">
        <div class="form form-a"></div>
        <div class="form form-b"></div>
        <div class="form form-c"></div>
        <div class="form form-d"></div>
      </div>
      <div class="shell">
        <header class="topbar">
          <a href="https://namche.ai" class="brand">
            <svg viewBox="0 0 280 280" fill="currentColor" aria-hidden="true">
              <rect x="10" y="10" width="80" height="80"/>
              <rect x="10" y="100" width="80" height="80"/>
              <rect x="10" y="190" width="80" height="80"/>
              <path d="M100,10 h80 v80 h-80 A80,80 0 0,1 100,10Z"/>
              <path d="M100,100 h80 v80 Q100,180 100,100Z"/>
              <rect x="190" y="100" width="80" height="80"/>
              <rect x="190" y="190" width="80" height="80"/>
            </svg>
            <span>{brandLabel}</span>
          </a>
          <button class="nav-toggle" type="button" aria-label="Toggle navigation" aria-expanded="false" aria-controls="top-nav">
            <span class="nav-toggle-line" aria-hidden="true"></span>
            <span class="nav-toggle-line" aria-hidden="true"></span>
            <span class="nav-toggle-line" aria-hidden="true"></span>
          </button>
          <nav id="top-nav" class="pill-nav">
            <a class:list={{ "is-active": siteId === 'namche' }} href={navHrefBySite.namche}>Namche AI</a>
            <span class="pill-group">
              <a class:list={{ "is-active": siteId === 'tashi' }} href={navHrefBySite.tashi} aria-label="Tashi"><span class="emoji emoji-mountain">üèîÔ∏è</span></a>
              <a class:list={{ "is-active": siteId === 'pema' }} href={navHrefBySite.pema} aria-label="Pema"><span class="emoji emoji-lotus">ü™∑</span></a>
              <a class:list={{ "is-active": siteId === 'nima' }} href={navHrefBySite.nima} aria-label="Nima"><span class="emoji emoji-sun">‚òÄÔ∏è</span></a>
            </span>
          </nav>
        </header>
      </div>

      <main>
        <slot />
      </main>

      <footer>
        <div class="footer-line">
          <p>Built by <a href="https://tashi.namche.ai">Tashi <span class="emoji emoji-mountain">üèîÔ∏è</span></a></p>
          <a href="https://batlogg.com">BTLG</a>
        </div>
      </footer>
    </div>
    <script>
      const toggle = document.querySelector('.nav-toggle');
      const nav = document.querySelector('#top-nav');
      if (toggle && nav) {
        toggle.addEventListener('click', () => {
          const expanded = toggle.getAttribute('aria-expanded') === 'true';
          toggle.setAttribute('aria-expanded', String(!expanded));
          nav.classList.toggle('is-open', !expanded);
        });
      }
    </script>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
