---
interface Props {
  eyebrow: string;
  headline: string;
  tagline: string;
}

const { eyebrow, headline, tagline } = Astro.props;
---

<section class="hero">
  <div class="hero-grid">
    <div class="hero-copy">
      <p class="kicker">{eyebrow}</p>
      <h1 class="hero-title">{headline}</h1>
      <p class="hero-tagline">{tagline}</p>
    </div>
    <div class="hero-art" aria-hidden="true">
      <div class="block b1"></div>
      <div class="block soft b2 round-left"></div>
      <div class="block fade b3 round-right"></div>
      <div class="block b4"></div>
    </div>
  </div>
</section>
