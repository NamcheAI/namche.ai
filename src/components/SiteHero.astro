---
interface Props {
  eyebrow: string;
  headline: string;
  tagline: string;
}

const { eyebrow, headline, tagline } = Astro.props;
---

<section class="hero">
  <div class="hero-inner">
    <p class="hero-meta">{eyebrow}</p>
    <h1 class="hero-title">{headline}</h1>
    <p class="hero-tagline">{tagline}</p>
    <div class="hero-shape" aria-hidden="true">
      <div class="hero-block"></div>
      <div class="hero-block round"></div>
      <div class="hero-block round"></div>
      <div class="hero-block"></div>
    </div>
  </div>
</section>
