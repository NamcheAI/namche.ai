---
import Base from '../layouts/Base.astro';
import type { AgentProfile } from '../agents/types';

interface Props {
  profile: AgentProfile;
}

const { profile } = Astro.props;
---

<Base title={`${profile.name} â€” namche.ai`} description={profile.description}>
  <section class="hero">
    {
      profile.heroImageSrc && (
        <img
          class="hero-image"
          src={profile.heroImageSrc}
          alt={profile.heroImageAlt ?? `${profile.name} symbol`}
          width="88"
          height="88"
        />
      )
    }
    <h1>{profile.name}</h1>
    <p>{profile.intro}</p>
  </section>

  {
    profile.sections.map((section) => (
      <section>
        <h2>{section.heading}</h2>
        {section.paragraphs?.map((paragraph) => <p>{paragraph}</p>)}
        {
          section.items && (
            <ul>
              {section.items.map((item) => (
                <li>{item}</li>
              ))}
            </ul>
          )
        }
      </section>
    ))
  }
</Base>

<style>
  .hero {
    padding: var(--space-lg) 0;
  }

  .hero-image {
    width: 88px;
    height: 88px;
    margin-bottom: var(--space-sm);
  }
</style>
